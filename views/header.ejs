<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">Finance Tracker</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (isLoggedIn) { %>
            <!-- Protected Navbar -->
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'transactions' ? 'active' : '' %>" href="/transactions">Transactions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'add' ? 'active' : '' %>" href="/add">Add</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'admin' ? 'active' : '' %>" href="/admin">Admin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <!-- Public Navbar -->
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'login' ? 'active' : '' %>" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'register' ? 'active' : '' %>" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</body>